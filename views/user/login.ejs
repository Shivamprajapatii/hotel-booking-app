<% layout('/layouts/boilerplate') -%>
<div class="row mt-3">
    <div class="col-8 offset-2">
        <h1>Login </h1>
        <form action="/login" method="POST" class="needs-validation" novalidate>
            <div class="mb-3">
                <label for="username" class="form-label">USername</label>
                <input type="text" name="username" placeholder="Add a Catchy Title" class="form-control" required>
             </div>

             <div class="mb-3">
                <label for="password" class="form-label">Password</label>
                <input type="password" name="password" placeholder="Enter Password" id="password" class="form-control" required>
             </div>
            <button class="btn btn-success  mt-3">login</button> 
        </form>
    </div>
</div>